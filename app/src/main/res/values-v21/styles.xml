<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeedInput">
        <item name="android:background">@drawable/bg_seed_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/very_dark_blue</item>
        <item name="android:textColor">@color/bright_white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLength">64</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="LargeButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_large_button</item>
    </style>

    <style name="SmallButton">
        <item name="android:background">@drawable/bg_small_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_smallbutton</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:padding">14dp</item>
        <item name="android:letterSpacing">0.32</item>
    </style>

    <style name="SendAmountInput" parent="@android:style/Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/edittext_sendamount</item>
        <item name="android:textColorHint">@color/edittext_sendamount</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_sky_blue</item>
        <item name="android:letterSpacing">0.15</item>
