    <style name="BiggerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="BaseButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ConfirmButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_large_button</item>
    </style>

    <style name="CancelButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_large_button_gray</item>
    </style>

    <style name="text_input_layout_default" parent="Widget.Design.TextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/forms_textinputlayout_correction</item>
        <item name="android:layout_marginLeft">@dimen/forms_textinputlayout_correction</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="hintTextAppearance">@style/text_input_layout_hint_appearance</item>
    </style>

    <style name="text_input_layout_hint_appearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_bold" parent="text_default">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_bold_small" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="horizontal_dots_button">
        <item name="android:layout_width">@dimen/image_medium_width</item>
        <item name="android:layout_height">@dimen/image_medium_width</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/activity_medium_padding</item>
    </style>
    <style name="form_label" parent="text_bold_small">
        <item name="android:layout_marginTop">@dimen/activity_extra_padding</item>
    </style>
    <style name="text_default" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="fontPath">fonts/RobotoRegular.ttf</item>-->
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_dropdown_multiline" parent="text_default">
        <item name="android:layout_margin">@dimen/activity_medium_padding</item>
        <item name="android:padding">@dimen/activity_medium_padding</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="CardLayoutStyle" >
        <item name="android:background">@drawable/card_background</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <!--suppress AndroidLintNewApi -->
        <item name="android:elevation">2dp</item>
    </style>




</resources>
