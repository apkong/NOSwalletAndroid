<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    tools:background="@android:color/transparent">

    <ImageView
        android:contentDescription="image"
        android:id="@+id/item_send_receive_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        tools:srcCompat="@drawable/ic_receive" />

    <TextView
        android:id="@+id/item_history_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_send_receive_icon"
        android:layout_toRightOf="@+id/item_send_receive_icon"
        tools:text="~115.9" />

    <TextView
        android:id="@+id/item_history_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        tools:text="Xrb_3dkvlndvln_uufdp" />


</RelativeLayout>