<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:animateLayoutChanges="true"
    android:background="@color/bright_white"
    android:orientation="vertical">

    <include
        android:id="@+id/dialog_appbar"
        layout="@layout/view_appbar_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/amount_transferred_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_appbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:layout_toStartOf="@+id/fragment_transaction_detail_receive_icon"
        android:layout_toLeftOf="@+id/fragment_transaction_detail_receive_icon"
        android:textColor="@color/dark_sky_blue"
        android:textSize="16dp"
        tools:text="Received 1 NOS" />

    <ImageView
        android:id="@+id/fragment_transaction_detail_receive_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/dialog_appbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        tools:src="@drawable/ic_receive" />

    <TextView
        android:id="@+id/exchange_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount_transferred_label"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/copy_exchange_address"
        android:textColor="@color/dark_sky_blue"
        android:textSize="16dp"
        tools:text="xrb_1q3hqecaw15cjt7thbtxu3pbzr1eihtzzpzxguoc37bj1wc5ffoh7w74gi6p" />

    <ImageView
        android:id="@+id/copy_exchange_address"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/amount_transferred_label"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_content_copy" />

    <TextView
        android:id="@+id/blockhash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/copy_exchange_address"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/copy_exchange_address"
        android:textColor="@color/dark_sky_blue"
        android:textSize="16dp"
        tools:text="blockHash" />

    <ImageView
        android:id="@+id/blockhash_url"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/copy_exchange_address"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_link_variant" />

    <TextView
        android:id="@+id/refund_button"
        style="@style/LargeButton"
        android:layout_below="@+id/blockhash_url"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/refund" />

</RelativeLayout>
